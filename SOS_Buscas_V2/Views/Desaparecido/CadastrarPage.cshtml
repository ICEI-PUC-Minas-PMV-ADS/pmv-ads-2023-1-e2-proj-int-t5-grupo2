@model DesaparecidoModel

<div>
    <form asp-controller="Desaparecido" asp-action="Cadastrar" method="post" enctype="multipart/form-data">
        <input name="Nome" class="form-control" type="text" asp-for="Nome" placeholder="Nome" aria-label="default input example" style="margin:10px;">
        <input name="Sobrenome" class="form-control" type="text" asp-for="Sobrenome" placeholder="Sobrenome" aria-label="default input example" style="margin:10px;">
        <input name="DataHoraDesaparecimento" class="form-control" type="datetime-local" asp-for="DataHoraDesaparecimento" placeholder="DataHoraDesaparecimento" aria-label="default input example" style="margin:10px;">
        <input name="CorPele" class="form-control" type="text" asp-for="CorPele" placeholder="CorPele" aria-label="default input example" style="margin:10px;">
        <input name="Cabelo" class="form-control" type="text" asp-for="Estilocabelo" placeholder="EstiloCabelo" aria-label="default input example" style="margin:10px;">
        <input name="Roupa" class="form-control" type="text" asp-for="Roupa" placeholder="Roupa" aria-label="default input example" style="margin:10px;">
        <input name="Altura" class="form-control" type="text" asp-for="Altura" placeholder="Altura" aria-label="default input example" style="margin:10px;">
        <input name="Tatuagem" class="form-control" type="text" asp-for="Tatoagem" placeholder="Tatuagem" aria-label="default input example" style="margin:10px;">
        <input name="Observacoes" class="form-control" type="text" asp-for="Observacoes" placeholder="Observacoes" aria-label="default input example" style="margin:10px;">

        <input type="file" name="foto" style="display:flex;margin:8px;" />

        <input type="submit" class="btn btn-primary" style="display:flex; margin:8px;">
    </form>
</div>