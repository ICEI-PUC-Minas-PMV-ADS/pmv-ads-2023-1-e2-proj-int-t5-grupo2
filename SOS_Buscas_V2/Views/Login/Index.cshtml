@model UsuarioModel

<div>

    <style>
        .form-control {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            box-sizing: border-box;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            cursor: pointer;
            background-color: #007bff;
            border: none;
            color: #fff;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
        }

        input[type="submit"].btn-primary {
            width: auto;
        }

            input[type="submit"].btn-primary:hover {
                background-color: #0069d9;
            }

    </style>
    <form asp-controller="Login" asp-action="VerificarLogin" method="post">
        <input name="Email" class="form-control" type="text" asp-for="Email" placeholder="Email" aria-label="default input example">
        <input name="Senha" class="form-control" type="password" asp-for="Senha" placeholder="Senha" aria-label="default input example">
        
        <input type="submit" class="btn btn-primary">
    </form>
</div>